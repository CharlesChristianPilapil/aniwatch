{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://aniwatch-cmuc.onrender.com/api/:path*"
        },
        {
            "source": "/auth/:path*",
            "destination": "https://aniwatch-cmuc.onrender.com/auth/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}